message = "I love Python"
newMessage = ""
for c in message:
    print(ord(c)) #print the Unicode of each number
    print(chr(ord(c)+1)) #print the next character
    newMessage = newMessage + chr(ord(c)+1)b # add to new Message
print("The coded message is", newMessage)

